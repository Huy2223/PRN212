<Window x:Class="HelloWpfApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWpfApp"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Màn hình đăng nhập" HorizontalAlignment="Left" Height="38" Margin="290,100,0,0" VerticalAlignment="Top" Width="156" Foreground="#FFEA0E0E" Background="#FF204A82"/>
        <Button Content="Đăng nhập" HorizontalAlignment="Left" Height="35" Margin="290,250,0,0" VerticalAlignment="Top" Width="83" Click="Button_Click_1"/>
        <Button Content="Thoát" HorizontalAlignment="Left" Height="35" Margin="414,250,0,0" VerticalAlignment="Top" Width="87" Click="Button_Click"/>
        <Label Content="UserName" HorizontalAlignment="Left" Height="28" Margin="290,151,0,0" VerticalAlignment="Top" Width="64"/>
        <TextBox x:Name="txtUserName" HorizontalAlignment="Left" Height="28" Margin="368,151,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="93" TextChanged="TextBox_TextChanged_1"/>
        <Label Content="Password" HorizontalAlignment="Left" Height="28" Margin="290,189,0,0" VerticalAlignment="Top" Width="64"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Height="28" Margin="368,189,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="93" TextChanged="TextBox_TextChanged_1"/>
    </Grid>
</Window>
